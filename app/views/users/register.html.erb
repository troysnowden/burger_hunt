<div class="credentials-container-register">
    <%= image_tag "icon.png", class:"icon-register-img"%> <br>
    <%= form_for @user, url: "/register", :html => {'id' => 'name-form'} do |f|%>
    <%= f.label :username%> <br>
    <%= f.text_field :username, :required => true %> <br>
    <%= f.label :password%> <br>
    <%= f.password_field :password, :required => true %> <br>
    <%= f.submit 'Register', class: "register-button"%> <br>

  <%end%>

</div>
